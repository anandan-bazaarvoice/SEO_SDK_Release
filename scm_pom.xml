	</dependencies>
	
	<scm>
		<url>https://github.com/anandan-bazaarvoice/SEO_SDK_Release</url>
		<connection>scm:git:https://github.com/anandan-bazaarvoice/SEO_SDK_Release.git</connection>
		<!-- <connection>scm:git:git://github.com/anandan-bazaarvoice/SEO_SDK_Release.git</connection> -->
